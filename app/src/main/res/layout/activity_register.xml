<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.swapsha96.imat.RegisterActivity">

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="158dp"
        android:layout_above="@+id/reg_password"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/degree"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="201dp"
        android:layout_alignEnd="@+id/reg_email"
        android:layout_alignStart="@+id/reg_email" />

    <Button
        android:id="@+id/register"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Register"
        style="@style/Widget.AppCompat.Button.Colored"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="480dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="97dp"
        android:layout_alignEnd="@+id/reg_password" />

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reg_email"
        android:layout_alignStart="@+id/reg_email"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="115dp" />

    <Spinner
        android:id="@+id/degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/year"
        android:layout_alignStart="@+id/year"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_alignEnd="@+id/reg_password" />

    <Spinner
        android:id="@+id/year"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="270dp"
        android:layout_above="@+id/branch"
        android:layout_alignStart="@+id/branch"
        android:layout_alignEnd="@+id/reg_password" />

    <Spinner
        android:id="@+id/branch"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="294dp"
        android:layout_above="@+id/destination"
        android:layout_alignStart="@+id/destination"
        android:layout_alignEnd="@+id/reg_password" />

    <Spinner
        android:id="@+id/destination"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_above="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_alignEnd="@+id/reg_password" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_marginBottom="63dp"
        android:layout_above="@+id/register"
        android:layout_alignStart="@+id/register"
        android:layout_alignEnd="@+id/register" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMAT"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="50dp"
        android:layout_above="@+id/reg_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

</RelativeLayout>
